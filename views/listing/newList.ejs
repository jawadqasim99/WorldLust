
<% layout('/layouts/boilerplate.ejs') -%>
<body>
<div class="row">
    <div class="col-6 offset-3">
        <h1>Add Listing Item:</h1>
    <form action="/listing" method="post">
        <div class="new-listing mb-2" >
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" placeholder="Add a catchy title" class="form-control" id="title">
        </div>
        <div class="new-listing">
            <label for="description" class="form-label">description</label>
            <textarea name="listing[description]"  cols="10" rows="5" class="form-control" id="description"></textarea>
        </div>
        
        <div class="new-listing">
            <label for="image" class="form-label">Image</label>
            <input type="text" name="listing[image]"  placeholder="URL" class="form-control" id="image">
        </div>
     <div class="row">
        <div class="col-4">
            <label for="price" class="form-label">Price</label>
            <input type="number" name="listing[price]"  placeholder="1200" class="form-control" id="price">
          </div>
           <div class="col-8">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]" Splaceholder="Lahore"  class="form-control"  id="location">
    
           </div>
     </div>
        
        <div class="new-listing"> 
            <label for="country" class="form-label">country</label>
            <input type="text" name="listing[country]" placeholder="Pakistan" class="form-control" id="country">
        </div>
        
      
        <button class="btn btn-dark mt-2">Post</button>
    </form>
    </div>
</div>
    
   
</body>